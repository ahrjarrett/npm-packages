{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "es2018",
    "skipLibCheck": true,
    "sourceMap": true,
    "lib": ["es6", "esNext"]
  },
  "exclude": ["node_modules", "**/*.spec.ts"]
}
